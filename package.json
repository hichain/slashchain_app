{
  "name": "slashchain_app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@types/koa-static": "^4.0.1",
    "@types/node": "^14.14.31",
    "@types/react": "^16.14.4",
    "@types/react-dom": "^16.9.11",
    "@types/socket.io": "^2.1.13",
    "boardgame.io": "0.43.3",
    "koa-static": "^5.0.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-scripts": "^4.0.3",
    "typescript": "^3.9.9"
  },
  "scripts": {
    "start": "REACT_APP_MASTER_URL=localhost:8000 react-scripts start",
    "build": "npm-run-all -p build:*",
    "build:client": "react-scripts build",
    "build:server": "tsc --project ./src/server",
    "serve:websocket": "PORT=8000 node ./dist/server/websocket_server.js",
    "serve:koa": "node ./dist/server/koa_server.js",
    "eject:client": "react-scripts eject",
    "test": "jest",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix './src/**/*.{ts,tsx}'"
  },
  "engines": {
    "node": "12.x"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@types/react-router": "^5.1.11",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "ts-jest": "^26.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js, ts, jsx, tsx}": "lint:fix"
  }
}
